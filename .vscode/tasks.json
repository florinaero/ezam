{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: cl.exe build active file",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"src\\*.cpp",
				"/I", "include",
				"/I", "C:\\_Personal\\libs\\SFML-2.5.1-sources\\SFML-2.5.1\\include",
				"/Fe:",
				"${workspaceFolder}\\out\\result.exe",
				"/Fo:","obj\\",
				"/INCREMENTAL",
				"/link",
				"/LIBPATH:C:\\_Personal\\libs\\sfml_build\\lib",
				 "sfml-network.lib",
				 "sfml-graphics.lib",
				 "sfml-window.lib",
				 "sfml-main.lib",
				 "sfml-audio.lib",
				 "sfml-system.lib"

			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}