{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/std:c++latest",
                "/Zi",
                //"/MDd", // Use /MDd or /MTd to define _DEBUG and allow _CrtDumpMemoryLeaks()
                "/EHsc",
                "src\\*.cpp",
                "/I",
                "include",
                "/I",
                "C:\\_Personal\\libs\\SFML-2.5.1-sources\\SFML-2.5.1\\include",
                "/I",
                "C:\\Program Files (x86)\\Visual Leak Detector\\include",
                "/Fe:",
                "${workspaceFolder}\\out\\result.exe",
                "/Fo:",
                "obj\\",
                "/INCREMENTAL",
                "/link",
                "/LIBPATH:C:\\_Personal\\libs\\sfml_build\\lib",
                "sfml-network.lib",
                "sfml-graphics.lib",
                "sfml-window.lib",
                "sfml-main.lib",
                "sfml-audio.lib",
                "sfml-system.lib",
                "/LIBPATH:C:\\Program Files (x86)\\Visual Leak Detector\\lib\\Win32",
                "vld.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/"
                ],
                "base": "$msCompile"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "cl.exe: Custom task."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\Program Files (x86)\\mingw-w64\\i686-8.1.0-posix-dwarf-rt_v6-rev0\\mingw32\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\Program Files (x86)\\mingw-w64\\i686-8.1.0-posix-dwarf-rt_v6-rev0\\mingw32\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "compiler: cl.exe"
        }
    ]
}